{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "types": ["node"],
        "allowJs": true,
        "outDir": "dist"
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifiers": true,
        "moduleTypes": {
            "scripts/*.ts": "esm"
        }
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "dist"]
}
