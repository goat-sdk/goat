{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/__tests__/**/*"
    ]
}